<body class="d-flex flex-column h-100" style="background-color: #f5f5f5;">
  <header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="/">MediYantra</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/search">Testing Centre</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/ngo">NGO</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/account">My Details <span class="sr-only">(current)</a>
          </li>
        </ul>
        <form class="form-inline mt-2 mt-md-0">
          <a href="/users/logout" class="btn btn-outline-warning my-2 my-sm-0">Logout</a>
        </form>
      </div>
    </nav>
  </header>
  
  <main role="main" class="flex-shrink-0">
    <div class="container">
      <% include ./partials/messages %>
      <ul class="nav nav-tabs" style="padding-top: 30px;">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#profile">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#modify">Modify</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#privacy">Privacy</a>
        </li>
      </ul>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active show" id="profile">
          <p></p>
          <p class="lead"><strong>Name</strong>: <%= name %><br>
          <strong>Email:</strong> <%= email %><br>
          <strong>Phone Number:</strong> <%= phone %><br>
          <strong>Plus Code:</strong> <%= plus_code %><br>
          <strong>Total Beds:</strong> <%= beds_total %><br>
          <strong>Available Beds:</strong> <%= beds_available %><br>
          <strong>Total Doctors:</strong> <%= total_docs %><br></p>
        </div>

        <div class="tab-pane fade" id="modify">
          <div class="col-5">
            <form action="/users/update" method="POST">
              <div class="form-group">
                <p></p>
                  <label for="beds_total">Total Beds</label>
                    <input
                      type="text"
                      id="newbeds_total"
                      name="newbeds_total"
                      class="form-control"
                      placeholder="Enter Total No. of Beds"
                      value="<%= typeof newbeds_total != 'undefined' ? newbeds_total : '' %>"
                    />
              </div>
              <div class="form-group">
                <label for="beds_available">Beds Available</label>
                  <input
                    type="text"
                    id="newbeds_available"
                    name="newbeds_available"
                    class="form-control"
                    placeholder="Enter Available No. of Beds"
                    value="<%= typeof newbeds_available != 'undefined' ? newbeds_available : '' %>"
                  />
              </div>
              <div class="form-group">
                <label for="total_docs">Total Doctors</label>
                  <input
                    type="text"
                    id="newtotal_docs"
                    name="newtotal_docs"
                    class="form-control"
                    placeholder="Enter Total no. of Doctors"
                    value="<%= typeof newtotal_docs != 'undefined' ? newtotal_docs : '' %>"
                  />
              </div>
              <button type="submit" class="btn btn-secondary">Save</button>
            </form>
          </div>
        </div>
        <div class="tab-pane fade" id="privacy">
          <p><h5> Please read the following before deactivating your account:</h5></p>
          <p>1. All your data will be permanently deleted<br> 
          2. Account cannot be recoverd once deactivated.<br>
          3. You will have to register once again to use the service.</p>
          <fieldset>
            <div class="form-group">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="check">
                <label class="custom-control-label" for="check">I have read all the instructions and I agree to them.</label>
              </div>
            </div>
          </fieldset>
          <form class="form-inline my-2 my-lg-0">
            <a href="/users/deactivate" class="btn btn-danger">Deactivate Account</a>
          </form>
        </div>
      </div>
    </div>
  </main>

  <footer class="footer mt-auto py-3">
    <div class="container">
      <span class="text-muted">&copy; Vineet</span>
    </div>
  </footer>
</body>